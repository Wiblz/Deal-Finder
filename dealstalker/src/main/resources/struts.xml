<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false"/>

    <package name="myPackage" extends="struts-default">

        <default-action-ref name="index" />

        <action name="index" class="org.dealstalker.com.IndexAction">
            <result>/WEB-INF/jsp/index.jsp</result>
        </action>
        
        <action name="startRegister" class="org.dealstalker.com.StartRegister" method="execute">
 			<result name="success">/WEB-INF/jsp/register.jsp</result>
        </action>
        
        <action name="register" class="org.dealstalker.com.Register" method="execute">
 			<result name="success">/WEB-INF/jsp/thankyou.jsp</result>
 			<result name="input">/WEB-INF/jsp/register.jsp</result>
        </action>
        
        <action name="startSignin" class="org.dealstalker.com.StartSignin" method="execute">
            <result name="success">/WEB-INF/jsp/signin.jsp</result>
        </action>
        
        <action name="searchItems" class="org.dealstalker.com.SearchEngine" method="execute">
            <result name="success">/WEB-INF/jsp/searchResults.jsp</result>
        </action>
        

    </package>

</struts>
